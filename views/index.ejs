<% include header.ejs %>
  <div class="container-fluid text-left">
    <h1><%= category %></h1>
  </div>

  <table class='table'>
    <thead>
      <tr>
        <th>Event</th>
        <th>Organisation/Society</th>
        <th>Information</th>
        <th>Type</th>
      </tr>
    </thead>
    <tbody>
      <% for (var i = 0; i < posts.length; i++) { %>
        <tr>
          <td><a href="<%= '/post/' + posts[i]._id %>"><%= posts[i].title %></a></td>
          <td></td>
          <td><%= posts[i].content %></td>
          <td><a href="<%= '/post/' + posts[i]._id %>"><%= posts[i].category %></a></td>
        </tr>
      <% } %>
    </tbody>
  </table>

  <div>
    </br>
    <p> <button class="btn btn-primary" type="button" onClick="window.location.href='/newPost';">Post New Event</button> </p>
  </div>
