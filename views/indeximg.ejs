<% include header.ejs %>
<div class="container-fluid text-left">
    <h1><%= capitalizeFirstLetter(category) %><small> Poster View</small></h1>
</div>

<button class="btn btn-primary pull-right" type="button" onClick="window.location.href='/category/<%=category%>';">Switch View</button>

<% for (var i = 0; i < posts.length; i++) { %>
  <a href="<%= '/post/' + posts[i]._id %>">
      <img class="thumbnail" src="/uploads/<%= posts[i].image.filename %>" alt="">
      <!--figcaption>/uploads/<%= posts[i].image.filename %></figcaption-->
  </a>
<% } %>

<div>
    </br>
    <p> <button class="btn btn-primary" type="button" onClick="window.location.href='/newPost';">Post New Event</button> </p>
</div>
