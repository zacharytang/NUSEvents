<% include header.ejs %>

<div class="container-fluid text-left">
    <h1><small>All Events by </small><%= orgname %></h1>
</div>

<div class="btn-group pull-right">
    <button type="button" class="btn btn-primary" onClick="window.location.href='/';">Condensed</button>
    <button type="button" class="btn btn-primary" onClick="window.location.href='/category/all';">Expanded</button>
    <button type="button" class="btn btn-primary" onClick="window.location.href='/myorg/posters';">Poster View</button>
</div>

<table class='table'>
    <thead>
        <tr>
            <th class="col-xs-2">Date</th>
            <th class="col-xs-5">Event</th>
            <th class="col-xs-2">Organisation/Society</th>
            <th class="col-xs-1"></th>
            <th class="col-xs-2">Type</th>
        </tr>
    </thead>
    <tbody>
        <% for (var i = 0; i < posts.length; i++) { %>
            <tr>                
                <td>
                    <b>
                    <%= posts[i].startdate %>
                        <% if (posts[i].enddate != posts[i].startdate ) { %>
                            to
                            <%= posts[i].enddate %>
                        <% } %>
                    </b>
                </td>
                <td><a href="<%= '/post/' + posts[i]._id %>"><b><%= posts[i].title %></b></a></td>
                <td><a href="<%= '/orgs/' + posts[i].organiserID %>"><b><%= posts[i].organiser %></b></a></td>
                <td><a href="<%= posts[i].externalLink %>"><span class="glyphicon glyphicon-globe"></span></a></td>
                <td><a href="<%= '/category/' + posts[i].category %>"><b><%= capitalize(posts[i].category) %></b></a></td>
            </tr>
            <% } %>
        </tbody>
    </table>


    <div>
    </br>

    <% if (user) { %>
    <p> <button class="btn btn-primary" type="button" onClick="window.location.href='/newPost';">Post New Event</button> </p>
    <% } %>
    </div>

<% include footer.ejs %>
