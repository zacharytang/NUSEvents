<% include header.ejs %>

<div class="container-fluid text-left">
    <h1><small>Results for: </small><%= query %><small> Poster View</small></h1>
</div>

<div class="btn-group pull-right">
    <button type="button" class="btn btn-primary" onClick="window.location.href='/search/<%=query%>/';">Normal View</button>
    <button type="button" class="btn btn-primary" onClick="window.location.href='/search/<%=query%>/posters';">Poster View</button>
</div>
<br>
<br>

<div>
<% for (var i = 0; i < posts.length; i++) { %>
    <% if (posts[i].image.filename) { %>
  <a href="<%= '/post/' + posts[i]._id %>">
      <img class="thumbnail" src="/uploads/<%= posts[i].image.filename %>" alt="">
      <!--figcaption>/uploads/<%= posts[i].image.filename %></figcaption-->
  </a>
  <% } %>
<% } %>
</div>

<div>
    </br>
    <% if (user) { %>
    <p> <button class="btn btn-primary" type="button" onClick="window.location.href='/newPost';">Post New Event</button> </p>
    <% } %>
</div>

